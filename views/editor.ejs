<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta author="Karen Bourgeois, Arnaldo Sepulveda, Ikechukwu Mbanugo">
    <meta keywords="notetaking, note-taking, HTML, CSS, JavaScript, OpenAI, Node.js, Handlebars, UNB Bootcamp, GitHub, Git Bash, npm, Sequalize, MySQL, express, Quill, VSCode, MVC, Express.js, AJAX, Render, Heroku, Socket.io, Postman, Insomnia">
    <title>Note-Taking Editor</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,500;0,700;1,300;1,700&display=swap" rel="stylesheet">
    <!-- Include stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <!-- <link href="https://cdn.jsdelivr.net/npm/quill@2.0.0-rc.2/dist/quill.snow.css" rel="stylesheet" /> -->

    <link rel="stylesheet" href="../assets/css/editor.css">
</head>

<body>
  
  <div class="icons">
    <button type="button" class="btn btn-sm btn-outline-danger dashboard-btn" id="dashboard-btn">
      <span class="fas fa-times"></span>
      <span>Dashboard</span>
    </button>
    <button type="button" class="btn btn-outline-light btn-sm log-out" id="log-out">
      <span class="fas fa-save"></span>
      <span>Log-out</span>
    </button>
    <button type="button" class="btn btn-outline-light btn-sm new-note" id="new-note">
      <span class="fas fa-edit"></span>
      <span>New Note</span>
    </button>
    <button type="button" class="btn btn-outline-light btn-sm save-note" id="save-note">
      <span class="fas fa-save"></span>
      <span>Save Note</span>
    </button>
    <button type="button" class="btn btn-outline-light btn-sm" id="show-categories">
      <span>Show Categories</span>
    </button>
    <button type="button" class="btn btn-sm btn-outline-danger clear-btn" id="clear-btn">
      <span class="fas fa-times"></span>
      <span>Clear Note</span>
    </button>
    <button type="button" class="btn btn-sm btn-outline-danger delete-btn" id="delete-btn">
      <span class="fas fa-times"></span>
      <span>Delete Note</span>
    </button>
  </div><br>

  <div id="category-buttons" style="display: none; margin-top: 10px;">
    <!-- Category buttons will be appended here -->
  </div>

  <div id="status-message" style="display: none;"></div>

  <div id="note-title">
    <!-- Make the title editable by adding contenteditable attribute -->
    <h2 class="note-title-editor" contenteditable="true" id="editable-note-title">Note Title</h2>
</div>

    <!-- Create the editor container -->
    <div id="editor">
      <p id="writing-form"></p>
    </div>

    <div id="note-title">
      <h2 class="note-title-editor">AI Features</h2>
      <div class="ai-features-buttons">
        <button type="button" class="btn btn-primary ai-feature-btn">Summary</button>
        <button type="button" class="btn btn-primary ai-feature-btn">Explanation</button>
        <button type="button" class="btn btn-primary ai-feature-btn">Sentiment</button>
        <button type="button" class="btn btn-primary ai-feature-btn">Writing</button>
        <button type="button" class="btn btn-primary ai-feature-btn">Action Item</button>
        <button type="button" class="btn btn-primary ai-feature-btn">Classification</button>
        <button type="button" class="btn btn-primary ai-feature-btn" id="clear-ai-features-btn">Clear</button>
    </div>
    </div>

    <!-- New editor container for AI-Features -->
    <div id="ai-features-editor">
      <p id="ai-features-form"></p>
    </div>

    <!-- Include the Quill library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <!-- Initialize Quill editor -->
    <script>
      var quill = new Quill('#editor', {
        theme: 'snow',
      });

      // Initialize second Quill editor for AI Features
      var quillAIFeatures = new Quill('#ai-features-editor', {
        theme: 'snow',
      });
    </script>

    <script src="/assets/js/editor.js"></script>
    <script src="/assets/js/ai-features-script.js"></script>
</body>

</html>
